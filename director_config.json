{
  "camera": {
    "url": "http://localhost:6082",
    "monitoring_interval_seconds": 5,
    "session_interval_seconds": 30,
    "session_timeout_minutes": 60
  },
  
  "visual_trigger_detection": {
    "endpoint": "http://192.168.0.46:5080/gim/llm_mid_visual/ask_question",
    "enabled": true,
    "timeout_ms": 30000,
    "max_tokens": 50,
    "active_trigger": "person_detection",
    "triggers": {
      "person_detection": {
        "enabled": true,
        "prompt": "Is there a person in this image? Answer only 'true' or 'false'.",
        "positive_keywords": ["true", "yes", "person", "people", "human"]
      },
      "motion_detection": {
        "enabled": false,
        "prompt": "Is there significant motion or movement in this image compared to a baseline? Answer 'true' or 'false'.",
        "positive_keywords": ["true", "yes", "motion", "movement", "moving"]
      },
      "vehicle_detection": {
        "enabled": true,
        "prompt": "Is there a vehicle (car, truck, motorcycle, bicycle) in this image? Answer 'true' or 'false'.",
        "positive_keywords": ["true", "yes", "vehicle", "car", "truck", "motorcycle", "bicycle"]
      },
      "animal_detection": {
        "enabled": false,
        "prompt": "Is there an animal (dog, cat, bird, etc.) in this image? Answer 'true' or 'false'.",
        "positive_keywords": ["true", "yes", "animal", "dog", "cat", "bird", "pet"]
      },
      "package_detection": {
        "enabled": false,
        "prompt": "Is there a package or delivery visible in this image? Answer 'true' or 'false'.",
        "positive_keywords": ["true", "yes", "package", "delivery", "box", "parcel"]
      },
      "anomaly_detection": {
        "enabled": false,
        "prompt": "Is there anything unusual, concerning, or out of place in this image? Describe briefly or say 'nothing unusual'.",
        "positive_keywords": ["unusual", "concerning", "strange", "alert", "warning", "danger"]
      }
    }
  },
  
  "scene_analysis": {
    "enabled": true,
    "prompt": "Describe what you see in this image in detail. Focus on the main subject, their appearance, what they might be doing, and the environment.",
    "timeout_ms": 30000,
    "max_tokens": 500
  },
  
  "response_generation": {
    "endpoint": "http://192.168.0.46:5080/gim/llm_mid/ask_question",
    "enabled": true,
    "prompt": "Based on this scene analysis, generate a friendly greeting or observation as if you were a helpful assistant acknowledging the person's presence.",
    "timeout_ms": 30000,
    "max_tokens": 200
  },
  
